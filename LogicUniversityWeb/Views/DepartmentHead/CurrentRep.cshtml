@model LogicUniversityWeb.Models.ViewModel.StaffViewModel

@{
    ViewBag.Title = "CurrentRep";
}

<h2>CurrentRep</h2>


<form method="POST" action="Assign">
    @Html.HiddenFor(m => m.CurrentRep.UserID)
    <div class="form-group">
        @Html.LabelFor(model => model.CurrentRep.Username, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CurrentRep.Username, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.CurrentRep.Username, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.SelectedNewRep, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.SelectedNewRep, new SelectList(Model.UserList, "UserID", "Username"), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SelectedNewRep, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">
        </div>
        <div class="col-md-10">
            <button type="submit">Change</button>
        </div>
    </div>
</form>


